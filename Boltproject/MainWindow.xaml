<Window x:Class="BoltWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Boltmenedzsment software" Height="450" Width="800" Foreground="Black">
    <Grid Background="#FFEAEAE8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,375" Grid.RowSpan="2" Background="#FFC95C5C">
            <Button x:Name="UjTermek" Content="Új termék" Click="UjTermek_Click" Margin="5" Background="White"/>
            <Button Content="Új eladó" Click="UjElado_Click" Margin="5" Background="White"/>
            <Button Content="Szavatossági idő lekérdezése" Click="SzavatossagiIdoLekerdezese_Click" Margin="5" Background="White"/>
            <Button Content="Értékesítés" Click="Ertekesites_Click" Margin="5" Background="White"/>
        </StackPanel>

        <ListBox x:Name="EredmenyLista" Grid.Row="1" Margin="10,91,369,55"/>
    </Grid>
</Window>